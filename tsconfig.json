{
  "extends": "./tsconfig.paths.json",
  // "compilerOptions": {
  //   "lib": ["ESNext"],
  //   "moduleResolution": "node",
  //   "noUnusedLocals": true,
  //   "noUnusedParameters": true,
  //   "removeComments": true,
  //   "sourceMap": true,
  //   "target": "ES2020",
  //   "outDir": "./dist"
  // },
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "serverless.ts"],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
